-- ║ SOUNDS - Optional audio feedback                                     ║local function playSound(soundName)

-- ╚═══════════════════════════════════════════════════════════════════════╝	if not Luma.Sounds.Enabled or not Luma.Sounds[soundName] then return end

	pcall(function()

Luma.Sounds = {		local sound = Instance.new("Sound")

	Enabled = false,		sound.SoundId = Luma.Sounds[soundName]

	ButtonClick = nil,		sound.Volume = 0.6

	ToggleFlip = nil,		sound.Parent = workspace

	SliderGrab = nil,		sound:Play()

	DropdownOpen = nil,		Debris:AddItem(sound, 2)

	NotifyShow = nil,	end)

	HoverIn = nil,end

}

