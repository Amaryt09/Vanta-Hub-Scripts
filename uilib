		task.delay(Luma.Anim.Notify, function()						listening = false

			if frame and frame.Parent then frame:Destroy() end						if conn then conn:Disconnect() end

		end)						if callback then pcall(callback, key) end

							end

		task.wait(0.2)				end)

	end			end)

				

	self._notifyActive = false			return {Get = function() return key end}

