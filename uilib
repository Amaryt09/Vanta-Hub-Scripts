	table.insert(self._notifications, {title = title, message = message, duration = duration or 4})		-- ================== KEYBIND ==================

			function items:AddKeybind(text, defaultKey, callback)

	if self._notifyActive then return end			local key = defaultKey or "None"

	self._notifyActive = true			

				local wrap = make("Frame", {

	while #self._notifications > 0 do				BackgroundTransparency = 1,

		local notif = table.remove(self._notifications, 1)				Size = UDim2.new(1, 0, 0, 38),

						Parent = items,

