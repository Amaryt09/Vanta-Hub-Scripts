			BorderSizePixel = 0,				BackgroundTransparency = 1,

			AnchorPoint = Vector2.new(1, 0),				Text = text,

			Position = UDim2.new(1, 20, 0, 20),				TextColor3 = Luma.Theme.PrimaryText,

			Parent = self.ScreenGui,				Font = Enum.Font.Gotham,

			ZIndex = 500,				TextSize = 14,

		})				TextXAlignment = Enum.TextXAlignment.Left,

		make("UICorner", {Parent = frame, CornerRadius = UDim.new(0, 8)})				Position = UDim2.new(0, 0, 0, 8),

		make("UIStroke", {Parent = frame, Color = Luma.Theme.Accent, Thickness = 2})				Size = UDim2.new(1, -140, 0, 20),

						Parent = wrap,

		local titleLbl = make("TextLabel", {			})

			Text = notif.title,			

			BackgroundTransparency = 1,			local keyBtn = make("TextButton", {

			TextColor3 = Luma.Theme.TextPrimary,				Text = tostring(key),

			Font = Enum.Font.GothamBold,				BackgroundColor3 = Color3.fromRGB(32, 32, 38),

			TextSize = 14,				TextColor3 = Luma.Theme.Accent,

			Position = UDim2.new(0, 12, 0, 8),				Font = Enum.Font.GothamBold,

			Size = UDim2.new(1, -24, 0, 20),				TextSize = 13,

			Parent = frame,				Size = UDim2.new(0, 130, 0, 24),

		})				Position = UDim2.new(1, -134, 0, 7),

						Parent = wrap,

		local msgLbl = make("TextLabel", {				BorderSizePixel = 0,

			Text = notif.message,				AutoButtonColor = false,

			BackgroundTransparency = 1,			})

			TextColor3 = Luma.Theme.TextSecondary,			make("UICorner", {Parent = keyBtn, CornerRadius = UDim.new(0, 6)})

			Font = Enum.Font.Gotham,			

