		Parent = body,

function Luma:AddTab(tabName)	})

	local tabBtn = make("TextButton", {	

		Text = tabName,	local tabsList = make("UIListLayout", {

		BackgroundColor3 = Luma.Theme.Hover,		Parent = tabsPanel,

		TextColor3 = Luma.Theme.TextPrimary,		FillDirection = Enum.FillDirection.Vertical,

