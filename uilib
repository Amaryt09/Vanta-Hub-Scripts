-- ╔═══════════════════════════════════════════════════════════════════════╗local function tween(inst, props, time, style, dir)

-- ║ UTILITY FUNCTIONS                                                     ║	if not inst or not inst.Parent then return end

-- ╚═══════════════════════════════════════════════════════════════════════╝	style = style or Enum.EasingStyle.Quint

	dir = dir or Enum.EasingDirection.Out

local function tween(inst, props, duration, easing, direction)	local info = TweenInfo.new(time or 0.25, style, dir)

	if not inst or not inst.Parent then return end	local t = TweenService:Create(inst, info, props)

	local info = TweenInfo.new(	t:Play()

		duration or 0.25,	return t

		easing or Enum.EasingStyle.Quint,end

		direction or Enum.EasingDirection.Out

	)local function make(class, props)

	local t = TweenService:Create(inst, info, props)	local inst = Instance.new(class)

	t:Play()	if props then

	return t		for k, v in pairs(props) do

end			pcall(function() inst[k] = v end)

		end

local function make(class, props)	end

	local obj = Instance.new(class)	return inst

	if props thenend

		for k, v in pairs(props) do

			pcall(function() obj[k] = v end)local function createRipple(parent, position, color)

		end	if not parent or not parent.Parent then return end

	end	local ripple = make("Frame", {

	return obj		Size = UDim2.new(0, 14, 0, 14),

end		AnchorPoint = Vector2.new(0.5, 0.5),

		Position = position,

local function playSound(name)		BackgroundColor3 = color or Luma.Theme.Accent,

	if not Luma.Sounds.Enabled or not Luma.Sounds[name] then return end		BackgroundTransparency = 0.4,

	pcall(function()		Parent = parent,

		local snd = make("Sound", {		ZIndex = parent.ZIndex + 1,

			SoundId = Luma.Sounds[name],	})

			Volume = 0.5,	make("UICorner", {Parent = ripple, CornerRadius = UDim.new(1, 0)})

			Parent = workspace	

		})	tween(ripple, {

		snd:Play()		Size = UDim2.new(0, 250, 0, 250),

		Debris:AddItem(snd, 0.5)		BackgroundTransparency = 1

	end)	}, Luma.Anim.RippleTime, Enum.EasingStyle.Quad, Enum.EasingDirection.In)

end	

	task.delay(Luma.Anim.RippleTime, function()

-- ╔═══════════════════════════════════════════════════════════════════════╗		if ripple and ripple.Parent then pcall(function() ripple:Destroy() end) end

-- ║ RIPPLE EFFECT - Beautiful expanding circles                          ║	end)

-- ╚═══════════════════════════════════════════════════════════════════════╝end



local function createRipple(parent, mousePos, color)local function addHoverEffects(btn, originalColor)

	if not parent or not parent.Parent then return end	if not btn then return end

		originalColor = originalColor or Luma.Theme.PrimaryText

	local ripple = make("Frame", {	

		Size = UDim2.new(0, 10, 0, 10),	btn.MouseEnter:Connect(function()

		Position = UDim2.new(0, mousePos.X - parent.AbsolutePosition.X, 0, mousePos.Y - parent.AbsolutePosition.Y),		if btn and btn.Parent then

		BackgroundColor3 = color or Luma.Theme.Accent,			pcall(function()

		BackgroundTransparency = 0.3,				tween(btn, {TextColor3 = Luma.Theme.Accent}, Luma.Anim.HoverTime, Enum.EasingStyle.Quad)

		Parent = parent,			end)

		ZIndex = parent.ZIndex + 10,		end

		AnchorPoint = Vector2.new(0.5, 0.5),	end)

	})	

		btn.MouseLeave:Connect(function()

	make("UICorner", {Parent = ripple, CornerRadius = UDim.new(1, 0)})		if btn and btn.Parent then

				pcall(function()

	tween(ripple, {Size = UDim2.new(0, 300, 0, 300), BackgroundTransparency = 1}, Luma.Anim.Ripple)				tween(btn, {TextColor3 = originalColor}, Luma.Anim.HoverTime, Enum.EasingStyle.Quad)

	task.delay(Luma.Anim.Ripple, function()			end)

		if ripple and ripple.Parent then pcall(function() ripple:Destroy() end) end		end

	end)	end)

endend



