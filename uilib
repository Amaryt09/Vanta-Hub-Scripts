--[[
    Velour UI Library - Enhanced Edition
    Style: Sleek, Modern, Adaptive, Animated
    Author: AI Assistant
]]

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")

local Library = {}

--// Theme Configuration
Library.Theme = {
    Main = Color3.fromRGB(25, 25, 30),
    Sidebar = Color3.fromRGB(30, 30, 35),
    Content = Color3.fromRGB(35, 35, 40),
    Text = Color3.fromRGB(240, 240, 240),
    TextDark = Color3.fromRGB(150, 150, 150),
    Accent = Color3.fromRGB(0, 180, 215), -- A slightly brighter, modern blue
    Outline = Color3.fromRGB(50, 50, 55),
    BackgroundBlur = 0.5 -- For the background behind the UI
}

--// Animation Presets
Library.Animations = {
    SlideIn = TweenInfo.new(0.4, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
    SlideOut = TweenInfo.new(0.4, Enum.EasingStyle.Sine, Enum.EasingDirection.In),
    FadeIn = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
    FadeOut = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In),
    Pop = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
    EaseInOut = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut)
}

--// Utility Functions
local function MakeDraggable(topbarobject, object)
    local Dragging = false
    local DragInput = nil
    local DragStart = nil
    local StartPosition = nil

    local function Update(input)
        local Delta = input.Position - DragStart
        local Position = UDim2.new(StartPosition.X.Scale, StartPosition.X.Offset + Delta.X, StartPosition.Y.Scale, StartPosition.Y.Offset + Delta.Y)
        
        -- Clamp position to screen boundaries
        local ScreenSize = UserInputService:GetFullScreenSize()
        local ObjectSize = object.AbsoluteSize
        
        local newX = math.clamp(Position.X.Offset, 0, ScreenSize.X - ObjectSize.X)
        local newY = math.clamp(Position.Y.Offset, 0, ScreenSize.Y - ObjectSize.Y)
        
        object.Position = UDim2.new(0, newX, 0, newY)
    end

    topbarobject.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            Dragging = true
            DragStart = input.Position
            StartPosition = object.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    Dragging = false
                end
            end)
        end
    end)

    topbarobject.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            DragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == DragInput and Dragging then
            Update(input)
        end
    end)
end

local function CreateRipple(btn, color)
    spawn(function()
        local Mouse = Players.LocalPlayer:GetMouse()
        local Circle = Instance.new("Frame") -- Using Frame for simplicity and easier styling
        Circle.Name = "Circle"
        Circle.Parent = btn
        Circle.BackgroundColor3 = color or Color3.fromRGB(255, 255, 255)
        Circle.BackgroundTransparency = 0.8
        Circle.ZIndex = 10
        
        local X, Y = Mouse.X - btn.AbsolutePosition.X, Mouse.Y - btn.AbsolutePosition.Y
        Circle.Position = UDim2.new(0, X, 0, Y)
        Circle.Size = UDim2.new(0, 0, 0, 0)
        Circle.AnchorPoint = Vector2.new(0.5, 0.5)
        
        local CircleCorner = Instance.new("UICorner")
        CircleCorner.CornerRadius = UDim.new(1, 0)
        CircleCorner.Parent = Circle

        local Tween = TweenService:Create(Circle, Library.Animations.Pop, {Size = UDim2.new(0, 200, 0, 200), BackgroundTransparency = 1})
        Tween:Play()
        Tween.Completed:Wait()
        Circle:Destroy()
    end)
end

--// Main Library Function
function Library:Window(options)
    local Title = options.Title or "Velour UI"
    local isMobile = UserInputService.TouchEnabled and not RunService:IsStudio()

    -- ScreenGui Container
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "VelourLib"
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.ResetOnSpawn = false -- Crucial for keeping UI state
    ScreenGui.Enabled = false -- Start hidden
    ScreenGui.Parent = CoreGui -- Use CoreGui for better compatibility

    -- Background Blur (Optional, for a frosted glass effect)
    if Library.Theme.BackgroundBlur > 0 then
        local Blur = Instance.new("BlurEffect")
        Blur.Parent = ScreenGui
        Blur.Enabled = false -- Disabled until UI is visible
        Blur.Size = Library.Theme.BackgroundBlur * 50 -- Scale blur amount
    end

    -- Main Frame
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = Library.Theme.Main
    MainFrame.BorderSizePixel = 0
    MainFrame.Active = true -- Allows input events to be captured

    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 10)
    MainCorner.Parent = MainFrame
    
    local MainStroke = Instance.new("UIStroke")
    MainStroke.Parent = MainFrame
    MainStroke.Color = Library.Theme.Outline
    MainStroke.Thickness = 1

    -- Adaptive Sizing
    local function ApplyAdaptiveSizing()
        local ScreenSize = UserInputService:GetFullScreenSize()
        local TargetWidth = ScreenSize.X * 0.5 -- Default PC width
        local TargetHeight = ScreenSize.Y * 0.7 -- Default PC height
        
        if isMobile then
            TargetWidth = ScreenSize.X * 0.9 -- Mobile width
            TargetHeight = ScreenSize.Y * 0.75 -- Mobile height
        end

        MainFrame.Size = UDim2.new(0, TargetWidth, 0, TargetHeight)
        MainFrame.Position = UDim2.new(0.5, -TargetWidth / 2, 0.5, -TargetHeight / 2)
    end
    ApplyAdaptiveSizing()
    UserInputService.WindowResized:Connect(ApplyAdaptiveSizing) -- Re-apply if window resizes

    -- Sidebar
    local Sidebar = Instance.new("Frame")
    Sidebar.Name = "Sidebar"
    Sidebar.Parent = MainFrame
    Sidebar.BackgroundColor3 = Library.Theme.Sidebar
    Sidebar.Size = UDim2.new(0, 180, 1, 0)
    Sidebar.BorderSizePixel = 0
    
    local SidebarCorner = Instance.new("UICorner")
    SidebarCorner.CornerRadius = UDim.new(0, 10) -- Match main frame
    SidebarCorner.Parent = Sidebar

    -- Title Bar for Draggability
    local TitleBar = Instance.new("Frame")
    TitleBar.Name = "TitleBar"
    TitleBar.Parent = MainFrame
    TitleBar.BackgroundColor3 = Library.Theme.Main
    TitleBar.Size = UDim2.new(1, 0, 0, 40)
    TitleBar.BorderSizePixel = 0
    TitleBar.Position = UDim2.new(0, 0, 0, 0) -- Top of the MainFrame
    
    local TitleBarCorner = Instance.new("UICorner")
    TitleBarCorner.CornerRadius = UDim.new(0, 10)
    TitleBarCorner.Parent = TitleBar

    -- Title Text
    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Parent = TitleBar
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Position = UDim2.new(0, 15, 0, 10)
    TitleLabel.Size = UDim2.new(1, -30, 0, 20)
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.Text = Title
    TitleLabel.TextColor3 = Library.Theme.Text
    TitleLabel.TextSize = 18
    TitleLabel.TextXAlignment = Enum.TextXAlignment.Left
    TitleLabel.TextWrapped = false

    -- Close Button
    local CloseButton = Instance.new("TextButton")
    CloseButton.Parent = TitleBar
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
    CloseButton.Size = UDim2.new(0, 25, 0, 25)
    CloseButton.Position = UDim2.new(1, -35, 0.5, -12.5)
    CloseButton.Text = "X"
    CloseButton.Font = Enum.Font.SourceSansBold
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.TextSize = 14
    CloseButton.BorderSizePixel = 0
    CloseButton.AutoButtonColor = false
    
    local CloseBtnCorner = Instance.new("UICorner")
    CloseBtnCorner.CornerRadius = UDim.new(1, 0)
    CloseBtnCorner.Parent = CloseButton

    CloseButton.MouseEnter:Connect(function()
        TweenService:Create(CloseButton, Library.Animations.EaseInOut, {BackgroundColor3 = Color3.fromRGB(255, 0, 0)}):Play()
    end)
    CloseButton.MouseLeave:Connect(function()
        TweenService:Create(CloseButton, Library.Animations.EaseInOut, {BackgroundColor3 = Color3.fromRGB(255, 60, 60)}):Play()
    end)
    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui.Enabled = false -- Hide the UI
        if Blur then Blur.Enabled = false end
    end)

    MakeDraggable(TitleBar, MainFrame) -- Make the whole window draggable via the title bar

    -- Sidebar Setup
    local SidebarPadding = 10
    local SidebarContentFrame = Instance.new("Frame")
    SidebarContentFrame.Parent = Sidebar
    SidebarContentFrame.BackgroundTransparency = 1
    SidebarContentFrame.Size = UDim2.new(1, -SidebarPadding * 2, 1, -SidebarPadding * 2)
    SidebarContentFrame.Position = UDim2.new(0, SidebarPadding, 0, SidebarPadding)
    
    local TabListLayout = Instance.new("UIListLayout")
    TabListLayout.Parent = SidebarContentFrame
    TabListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    TabListLayout.Padding = UDim.new(0, 8)
    TabListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabListLayout.VerticalAlignment = Enum.VerticalAlignment.Top

    -- Content Area
    local Pages = Instance.new("Frame")
    Pages.Name = "Pages"
    Pages.Parent = MainFrame
    Pages.BackgroundTransparency = 1
    Pages.Size = UDim2.new(1, -180, 1, -40) -- Adjust for sidebar and title bar
    Pages.Position = UDim2.new(0, 180, 0, 40) -- Position below title bar, next to sidebar
    Pages.ClipsDescendants = true
    
    local PageContentLayout = Instance.new("UIListLayout")
    PageContentLayout.Parent = Pages
    PageContentLayout.SortOrder = Enum.SortOrder.LayoutOrder
    PageContentLayout.Padding = UDim.new(0, 10)
    PageContentLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    PageContentLayout.VerticalAlignment = Enum.VerticalAlignment.Top

    local WindowTypes = {}
    local CurrentPage = nil

    -- Helper to activate a page
    local function ActivatePage(pageFrame)
        if CurrentPage and CurrentPage ~= pageFrame then
            TweenService:Create(CurrentPage, Library.Animations.FadeOut, {BackgroundTransparency = 1}):Play()
            CurrentPage.Visible = false
        end
        CurrentPage = pageFrame
        CurrentPage.Visible = true
        TweenService:Create(CurrentPage, Library.Animations.FadeIn, {BackgroundTransparency = 0}):Play()
    end
    
    -- Tab Functionality
    function WindowTypes:Tab(name)
        local TabButton = Instance.new("TextButton")
        TabButton.Parent = SidebarContentFrame
        TabButton.Size = UDim2.new(0, 160, 0, 40) -- Fixed width for tabs
        TabButton.Font = Enum.Font.GothamMedium
        TabButton.Text = name
        TabButton.TextColor3 = Library.Theme.TextDark
        TabButton.TextSize = 15
        TabButton.TextXAlignment = Enum.TextXAlignment.Center
        TabButton.TextYAlignment = Enum.TextYAlignment.Center
        TabButton.AutoButtonColor = false
        TabButton.BorderSizePixel = 0
        TabButton.BackgroundTransparency = 1
        TabButton.LayoutOrder = #SidebarContentFrame:GetChildren() -- Ensure correct order

        local TabCorner = Instance.new("UICorner")
        TabCorner.CornerRadius = UDim.new(0, 5)
        TabCorner.Parent = TabButton

        -- Page Frame
        local PageFrame = Instance.new("ScrollingFrame")
        PageFrame.Name = name .. "_Page"
        PageFrame.Parent = Pages
        PageFrame.BackgroundTransparency = 1 -- Initially transparent
        PageFrame.Size = UDim2.new(1, 0, 1, 0)
        PageFrame.ScrollBarThickness = 3
        PageFrame.ScrollBarImageColor3 = Library.Theme.Accent
        PageFrame.Visible = false
        PageFrame.ClipsDescendants = true

        local PageLayout = Instance.new("UIListLayout")
        PageLayout.Parent = PageFrame
        PageLayout.SortOrder = Enum.SortOrder.LayoutOrder
        PageLayout.Padding = UDim.new(0, 10)
        PageLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
        PageLayout.VerticalAlignment = Enum.VerticalAlignment.Top
        
        -- Page Element Container (to allow padding within the ScrollingFrame)
        local PageContentContainer = Instance.new("Frame")
        PageContentContainer.Parent = PageFrame
        PageContentContainer.BackgroundTransparency = 1
        PageContentContainer.Size = UDim2.new(1, 0, 0, 0) -- Height will adjust based on content
        PageContentContainer.LayoutOrder = 1

        local ContentPadding = 10
        local ContentContainerLayout = Instance.new("UIListLayout")
        ContentContainerLayout.Parent = PageContentContainer
        ContentContainerLayout.SortOrder = Enum.SortOrder.LayoutOrder
        ContentContainerLayout.Padding = UDim.new(0, ContentPadding)
        ContentContainerLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
        ContentContainerLayout.VerticalAlignment = Enum.VerticalAlignment.Top
        
        -- Interactions
        TabButton.MouseEnter:Connect(function()
            if not TabButton.Active then -- Don't animate if it's the active tab
                TweenService:Create(TabButton, Library.Animations.EaseInOut, {TextColor3 = Library.Theme.Text}):Play()
            end
        end)

        TabButton.MouseLeave:Connect(function()
            if not TabButton.Active then
                TweenService:Create(TabButton, Library.Animations.EaseInOut, {TextColor3 = Library.Theme.TextDark}):Play()
            end
        end)

        TabButton.MouseButton1Click:Connect(function()
            -- Animate the deselection of the current tab
            if CurrentPage then
                for _, btn in pairs(SidebarContentFrame:GetChildren()) do
                    if btn:IsA("TextButton") and btn.Active then
                        TweenService:Create(btn, Library.Animations.EaseInOut, {TextColor3 = Library.Theme.TextDark, BackgroundTransparency = 1}):Play()
                        btn.Active = false
                        break
                    end
                end
            end

            -- Activate new tab
            TabButton.Active = true
            TweenService:Create(TabButton, Library.Animations.Pop, {TextColor3 = Library.Theme.Text, BackgroundTransparency = 0}):Play()
            ActivatePage(PageFrame)
        end)

        -- Make first tab active by default
        if #SidebarContentFrame:GetChildren() == 1 then
            TabButton.Active = true
            ActivatePage(PageFrame)
        end

        -- Element Functions (These will add to PageContentContainer now)
        local Elements = {}

        function Elements:Label(text)
            local LabelFrame = Instance.new("Frame")
            LabelFrame.Parent = PageContentContainer
            LabelFrame.Size = UDim2.new(1, -ContentPadding * 2, 0, 35)
            LabelFrame.BorderSizePixel = 0
            LabelFrame.LayoutOrder = #PageContentContainer:GetChildren()

            local LabelCorner = Instance.new("UICorner")
            LabelCorner.CornerRadius = UDim.new(0, 5)
            LabelCorner.Parent = LabelFrame

            local Text = Instance.new("TextLabel")
            Text.Parent = LabelFrame
            Text.BackgroundTransparency = 1
            Text.Position = UDim2.new(0, 10, 0, 0)
            Text.Size = UDim2.new(1, -20, 1, 0)
            Text.Font = Enum.Font.GothamBold
            Text.Text = text
            Text.TextColor3 = Library.Theme.Accent -- Labels use accent color
            Text.TextSize = 15
            Text.TextXAlignment = Enum.TextXAlignment.Left
            Text.RichText = true -- Enable rich text for potential future styling

            return { Set = function(newText) Text.Text = newText end } -- Return object with Set method
        end

        function Elements:Button(text, callback)
            callback = callback or function() end
            
            local ButtonFrame = Instance.new("TextButton")
            ButtonFrame.Parent = PageContentContainer
            ButtonFrame.BackgroundColor3 = Library.Theme.Content
            ButtonFrame.Size = UDim2.new(1, -ContentPadding * 2, 0, 45)
            ButtonFrame.Text = ""
            ButtonFrame.AutoButtonColor = false
            ButtonFrame.LayoutOrder = #PageContentContainer:GetChildren()

            local BtnCorner = Instance.new("UICorner")
            BtnCorner.CornerRadius = UDim.new(0, 5)
            BtnCorner.Parent = ButtonFrame
            
            local BtnStroke = Instance.new("UIStroke")
            BtnStroke.Parent = ButtonFrame
            BtnStroke.Color = Library.Theme.Outline
            BtnStroke.Thickness = 1
            BtnStroke.Transparency = 0.5 -- Slightly visible outline

            local Text = Instance.new("TextLabel")
            Text.Parent = ButtonFrame
            Text.BackgroundTransparency = 1
            Text.Position = UDim2.new(0, 15, 0, 0)
            Text.Size = UDim2.new(1, -20, 1, 0)
            Text.Font = Enum.Font.GothamMedium
            Text.Text = text
            Text.TextColor3 = Library.Theme.Text
            Text.TextSize = 15
            Text.TextXAlignment = Enum.TextXAlignment.Left

            -- Interactions
            ButtonFrame.MouseEnter:Connect(function()
                TweenService:Create(ButtonFrame, Library.Animations.FadeIn, {BackgroundColor3 = Color3.fromRGB(45, 45, 50)}):Play()
                CreateRipple(ButtonFrame, Library.Theme.Accent) -- Ripple on hover
            end)

            ButtonFrame.MouseLeave:Connect(function()
                TweenService:Create(ButtonFrame, Library.Animations.FadeOut, {BackgroundColor3 = Library.Theme.Content}):Play()
            end)

            ButtonFrame.MouseButton1Click:Connect(function()
                CreateRipple(ButtonFrame, Library.Theme.Accent)
                callback()
            end)
        end

        function Elements:Toggle(text, default, callback)
            callback = callback or function() end
            local Toggled = default or false

            local ToggleFrame = Instance.new("TextButton")
            ToggleFrame.Parent = PageContentContainer
            ToggleFrame.BackgroundColor3 = Library.Theme.Content
            ToggleFrame.Size = UDim2.new(1, -ContentPadding * 2, 0, 45)
            ToggleFrame.Text = ""
            ToggleFrame.AutoButtonColor = false
            ToggleFrame.LayoutOrder = #PageContentContainer:GetChildren()

            local TogCorner = Instance.new("UICorner")
            TogCorner.CornerRadius = UDim.new(0, 5)
            TogCorner.Parent = ToggleFrame

            local Text = Instance.new("TextLabel")
            Text.Parent = ToggleFrame
            Text.BackgroundTransparency = 1
            Text.Position = UDim2.new(0, 15, 0, 0)
            Text.Size = UDim2.new(1, -100, 1, 0) -- Make space for the switch
            Text.Font = Enum.Font.GothamMedium
            Text.Text = text
            Text.TextColor3 = Library.Theme.Text
            Text.TextSize = 15
            Text.TextXAlignment = Enum.TextXAlignment.Left

            local SwitchContainer = Instance.new("Frame")
            SwitchContainer.Parent = ToggleFrame
            SwitchContainer.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Invisible background
            SwitchContainer.Size = UDim2.new(0, 50, 0, 25)
            SwitchContainer.Position = UDim2.new(1, -65, 0.5, -12.5)
            SwitchContainer.BackgroundTransparency = 1
            
            local SwitchBg = Instance.new("Frame")
            SwitchBg.Parent = SwitchContainer
            SwitchBg.BackgroundColor3 = Toggled and Library.Theme.Accent or Color3.fromRGB(60, 60, 65)
            SwitchBg.Size = UDim2.new(1, 0, 1, 0)
            
            local SwitchBgCorner = Instance.new("UICorner")
            SwitchBgCorner.CornerRadius = UDim.new(1, 0)
            SwitchBgCorner.Parent = SwitchBg

            local SwitchCircle = Instance.new("Frame")
            SwitchCircle.Parent = SwitchBg
            SwitchCircle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            SwitchCircle.Size = UDim2.new(0, 21, 0, 21)
            SwitchCircle.Position = Toggled and UDim2.new(1, -23, 0.5, -10.5) or UDim2.new(0, 2, 0.5, -10.5)
            
            local CircleCorner = Instance.new("UICorner")
            CircleCorner.CornerRadius = UDim.new(1, 0)
            CircleCorner.Parent = SwitchCircle

            local function UpdateToggle()
                local TargetPos = Toggled and UDim2.new(1, -23, 0.5, -10.5) or UDim2.new(0, 2, 0.5, -10.5)
                local TargetColor = Toggled and Library.Theme.Accent or Color3.fromRGB(60, 60, 65)
                
                TweenService:Create(SwitchCircle, Library.Animations.EaseInOut, {Position = TargetPos}):Play()
                TweenService:Create(SwitchBg, Library.Animations.EaseInOut, {BackgroundColor3 = TargetColor}):Play()
                callback(Toggled)
            end

            ToggleFrame.MouseButton1Click:Connect(function()
                Toggled = not Toggled
                UpdateToggle()
            end)
            
            -- Initialize state
            if default then
                Toggled = true
                UpdateToggle() -- Apply initial state without callback to avoid double calls
            end
            callback(Toggled) -- Call callback with initial state
            return { Get = function() return Toggled end, Set = function(state) Toggled = state; UpdateToggle() end }
        end

        function Elements:Slider(text, min, max, default, callback)
            callback = callback or function() end
            local Value = default or min
            
            local SliderFrame = Instance.new("Frame")
            SliderFrame.Parent = PageContentContainer
            SliderFrame.BackgroundColor3 = Library.Theme.Content
            SliderFrame.Size = UDim2.new(1, -ContentPadding * 2, 0, 60) -- Slightly taller for value label
            SliderFrame.LayoutOrder = #PageContentContainer:GetChildren()

            local SliderCorner = Instance.new("UICorner")
            SliderCorner.CornerRadius = UDim.new(0, 5)
            SliderCorner.Parent = SliderFrame

            local TextLabel = Instance.new("TextLabel")
            TextLabel.Parent = SliderFrame
            TextLabel.BackgroundTransparency = 1
            TextLabel.Position = UDim2.new(0, 10, 0, 5)
            TextLabel.Size = UDim2.new(0.6, -20, 0, 20) -- Text takes up left part
            TextLabel.Font = Enum.Font.GothamMedium
            TextLabel.Text = text
            TextLabel.TextColor3 = Library.Theme.Text
            TextLabel.TextSize = 15
            TextLabel.TextXAlignment = Enum.TextXAlignment.Left

            local ValueLabel = Instance.new("TextLabel")
            ValueLabel.Parent = SliderFrame
            ValueLabel.BackgroundTransparency = 1
            ValueLabel.Position = UDim2.new(0.6, -10, 0, 5) -- Aligned to right of text label's space
            ValueLabel.Size = UDim2.new(0.4, 0, 0, 20)
            ValueLabel.Font = Enum.Font.Gotham
            ValueLabel.Text = tostring(Value)
            ValueLabel.TextColor3 = Library.Theme.TextDark
            ValueLabel.TextSize = 14
            ValueLabel.TextXAlignment = Enum.TextXAlignment.Right

            local SliderBar = Instance.new("TextButton")
            SliderBar.Parent = SliderFrame
            SliderBar.BackgroundColor3 = Color3.fromRGB(60, 60, 65)
            SliderBar.Position = UDim2.new(0, 10, 0, 30)
            SliderBar.Size = UDim2.new(1, -20, 0, 8)
            SliderBar.Text = ""
            SliderBar.AutoButtonColor = false
            SliderBar.BorderSizePixel = 0
            
            local BarCorner = Instance.new("UICorner")
            BarCorner.CornerRadius = UDim.new(1, 0)
            BarCorner.Parent = SliderBar

            local Fill = Instance.new("Frame")
            Fill.Parent = SliderBar
            Fill.BackgroundColor3 = Library.Theme.Accent
            
            local FillCorner = Instance.new("UICorner")
            FillCorner.CornerRadius = UDim.new(1, 0)
            FillCorner.Parent = Fill

            local Dragging = false

            local function UpdateSliderPositionAndValue()
                local ClampedValue = math.clamp(Value, min, max)
                local SizeX = (ClampedValue - min) / (max - min)
                
                TweenService:Create(Fill, Library.Animations.EaseInOut, {Size = UDim2.new(SizeX, 0, 1, 0)}):Play()
                ValueLabel.Text = tostring(math.floor(ClampedValue)) -- Display integer value
            end

            local function HandleInput(input)
                local pos = input.Position
                local barAbsPos = SliderBar.AbsolutePosition
                local barAbsSize = SliderBar.AbsoluteSize
                
                local clickX = pos.X - barAbsPos.X
                local sizeX = math.clamp(clickX / barAbsSize.X, 0, 1)
                
                local newValue = min + ((max - min) * sizeX)
                Value = newValue
                UpdateSliderPositionAndValue()
                callback(math.floor(Value))
            end

            SliderBar.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    Dragging = true
                    HandleInput(input)
                end
            end)

            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                    Dragging = false
                end
            end)

            UserInputService.InputChanged:Connect(function(input)
                if Dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
                    HandleInput(input)
                end
            end)
            
            -- Initialize
            UpdateSliderPositionAndValue()
            callback(math.floor(Value))
            
            return { Get = function() return math.floor(Value) end, Set = function(newVal) Value = newVal; UpdateSliderPositionAndValue(); callback(math.floor(Value)) end }
        end

        -- Add more element types here (e.g., ColorPicker, InputField, Dropdown)

        return {
            Label = Elements.Label,
            Button = Elements.Button,
            Toggle = Elements.Toggle,
            Slider = Elements.Slider,
            -- Add more functions here
        }
    end

    -- Notification Functionality
    function WindowTypes:Notify(text, duration, title)
        title = title or "Notification"
        duration = duration or 3

        local Notification = Instance.new("Frame")
        Notification.Name = "Notification"
        Notification.Parent = ScreenGui
        Notification.BackgroundColor3 = Library.Theme.Main
        Notification.BorderSizePixel = 0
        
        local NotifCorner = Instance.new("UICorner")
        NotifCorner.CornerRadius = UDim.new(0, 6)
        NotifCorner.Parent = Notification
        
        local NotifStroke = Instance.new("UIStroke")
        NotifStroke.Parent = Notification
        NotifStroke.Color = Library.Theme.Accent
        NotifStroke.Thickness = 1

        local TitleLabel = Instance.new("TextLabel")
        TitleLabel.Parent = Notification
        TitleLabel.BackgroundTransparency = 1
        TitleLabel.Position = UDim2.new(0, 15, 0, 10)
        TitleLabel.Size = UDim2.new(1, -30, 0, 20)
        TitleLabel.Font = Enum.Font.GothamBold
        TitleLabel.Text = title
        TitleLabel.TextColor3 = Library.Theme.Accent
        TitleLabel.TextSize = 14
        TitleLabel.TextXAlignment = Enum.TextXAlignment.Left

        local DescLabel = Instance.new("TextLabel")
        DescLabel.Parent = Notification
        DescLabel.BackgroundTransparency = 1
        DescLabel.Position = UDim2.new(0, 15, 0, 30)
        DescLabel.Size = UDim2.new(1, -30, 0, 35) -- Make space for text wrapping
        DescLabel.Font = Enum.Font.Gotham
        DescLabel.Text = text
        DescLabel.TextColor3 = Library.Theme.Text
        DescLabel.TextSize = 13
        DescLabel.TextXAlignment = Enum.TextXAlignment.Left
        DescLabel.TextWrapped = true
        
        -- Auto-size height based on text content
        local function UpdateNotificationHeight()
            local currentHeight = 10 + TitleLabel.AbsoluteSize.Y + DescLabel.AbsoluteSize.Y + 15 -- Top margin + Title + Description + Bottom margin
            local minHeight = 70 -- Minimum height to avoid squishing
            Notification.Size = UDim2.new(0, 280, 0, math.max(currentHeight, minHeight))
            NotifCorner.CornerRadius = UDim.new(0, 6) -- Re-apply after size change
            NotifStroke.Parent = Notification -- Re-apply after size change
        end
        UpdateNotificationHeight()
        -- Update size when text changes (e.g., if rich text is used)
        DescLabel.Changed:Connect(UpdateNotificationHeight)
        TitleLabel.Changed:Connect(UpdateNotificationHeight)

        -- Animation
        local TargetX = isMobile and -300 or -30 -- Position off-screen to the right
        local StartX = ScreenGui.AbsoluteSize.X + 100 -- Start off-screen to the right
        
        Notification.Position = UDim2.new(1, StartX, 1, -Notification.AbsoluteSize.Y - 10) -- Start below screen edge
        TweenService:Create(Notification, Library.Animations.SlideIn, {Position = UDim2.new(1, TargetX, 1, -Notification.AbsoluteSize.Y - 10)}):Play()
        
        delay(duration, function()
            local closeTween = TweenService:Create(Notification, Library.Animations.SlideOut, {Position = UDim2.new(1, StartX, 1, -Notification.AbsoluteSize.Y - 10)})
            closeTween:Play()
            closeTween.Completed:Wait()
            Notification:Destroy()
        end)
    end
    
    -- Keybind to Toggle UI
    UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
        if gameProcessedEvent then return end -- Don't process if input is for the game itself (e.g., typing in chat)
        
        local toggleKey = options.ToggleKey or Enum.KeyCode.RightControl -- Default to RightControl if not specified
        
        if input.KeyCode == toggleKey then
            ScreenGui.Enabled = not ScreenGui.Enabled
            if Blur then
                Blur.Enabled = ScreenGui.Enabled -- Toggle blur effect
            end
        end
    end)

    -- Return the main object that allows adding tabs and notifications
    return WindowTypes
end

return Library
